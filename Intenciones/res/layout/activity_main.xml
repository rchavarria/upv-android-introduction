<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Intenciones: como usarlas"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnOpenWebPage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Abrir pagina web"
        android:onClick="pgWeb" />

    <Button
        android:id="@+id/btnCall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Llamar a numero" 
        android:onClick="llamadaTelefono" />
    
    <Button
        android:id="@+id/btnOpenMap"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Abrir coordenada GPS" 
        android:onClick="googleMaps" />
    
    <Button
        android:id="@+id/btnTakePhoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tomar foto" 
        android:onClick="tomarFoto" />
    
    <Button
        android:id="@+id/btnSendMail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enviar mail" 
        android:onClick="mandarCorreo" />
    
</LinearLayout>
